@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="table">
    <table>
        <div>
            <tr>
                <th><p>Name</p></th>
                <th><p>Last Name</p></th>
                <th><p>Age</p></th>
                <th><p>Date</p></th>
            </tr>
        </div>
        @foreach (var b in ViewBag.Persons)
            {
            <div>
                <tr class="body-content">
                    <td><p>@b.Name</p></td>
                    <td><p>@b.LastName</p></td>
                    <td><p>@b.Age</p></td>
                    <td><p>@b.Time</p></td>
                    <td><p><a href="/Home/Delete/@b.Id">Delete</a></p></td>
                    <td><p><a href="/Home/Edit/@b.Id">Edit</a></p></td>
                </tr>
            </div>
        }
    </table>
    <br/>
    <form method="POST" action="/Home/AddPerson">
        <input type="text" name="Name" placeholder="Name.." />
        <input type="text" name="LastName" placeholder="Last Name.." />
        <input type="text" name="Age" placeholder="Age.." />

        <!--  <button type="button" onclick="location.href='@Url.Action("AddPerson", "Home")'">Add</button> -->

        <input type="submit" title="add" value="Add" " />
        </form>
</div>